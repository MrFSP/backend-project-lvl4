include ../mixins/forms.pug

doctype html
html(lang="en").h-100
  head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(name='author' content='Pavel Egorov')
  meta(name='generator' content='Jekyll v3.8.5')
  title Task Manager
  script(src=assetPath('main.js'))
  link(href=assetPath('main.css'))
  link(href='https://getbootstrap.com/docs/4.3/examples/floating-labels/floating-labels.css' rel='stylesheet')
  body.h-100.d-flex.flex-column
    nav.navbar.navbar-expand-lg.fixed-top.navbar-light.bg-light.mb-3
      a.navbar-brand(href=route('root'))= t('appName')
      button.navbar-toggler(data-toggle="collapse" data-target="#navbarSupportedContent")
        span.navbar-toggler-icon
      .collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href=route('users'))= t('layouts.application.users')
        ul.navbar-nav
          if reply.request.signedIn
            li.nav-item
              a.nav-link(
                        href=route('user')
                      ) !{reply.request.session.get('userEmail')}
            li.nav-item
              +buttonTo(route('session'), 'delete')(class="btn nav-link" value=t('layouts.application.signOut'))
          else
            li.nav-item
              a.nav-link(href=route('newSession'))= t('layouts.application.signIn')
            li.nav-item
              a.nav-link(href=route('newUser'))= t('layouts.application.signUp')
    .container.h-100.pt-5

      each messages, type in reply.flash() || []
        each message in messages
          .animated.fadeOutUp
            .d-flex.justify-content-center
              .row.col-md-auto.alert.text-center.w-auto(class=`alert-${getAlertClass(type)}`)= message

      h1.my-4.text-center
        block header
      block content

    footer.footer
      .container.my-5.pt-4.border-bottom
      p.mt-5.mb-3.text-muted.text-center
        a.text-align-left(href='https://ru.hexlet.io/u/mrfsp') Pavel Egorov
        |  
        a.text-align-center &copy; 2020 !{' '}
        a(target="_blank" href="https://ru.hexlet.io") hexlet.io
